# Database Configuration
# Railway will auto-provide DATABASE_URL when you add PostgreSQL
DATABASE_URL=postgresql://username:password@host:5432/database

# JWT Secret (Generate with: openssl rand -hex 32)
JWT_SECRET_KEY=your-secret-key-here-generate-with-openssl

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_test_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Anthropic API (for conversational AI coach)
ANTHROPIC_API_KEY=sk-ant-your-key-here

# Video Storage Configuration
# Options: "local" or "r2"
VIDEO_STORAGE_TYPE=r2

# For local storage (ephemeral on Railway - not recommended for production)
VIDEO_UPLOAD_DIR=/data/videos

# For Cloudflare R2 storage (recommended)
# Get these from: https://dash.cloudflare.com -> R2 -> Manage R2 API Tokens
R2_ENDPOINT_URL=https://<account-id>.r2.cloudflarestorage.com
R2_ACCESS_KEY_ID=your-r2-access-key-id
R2_SECRET_ACCESS_KEY=your-r2-secret-access-key
R2_BUCKET_NAME=racepilot-videos
# Optional: Custom domain for public R2 bucket (if configured)
R2_PUBLIC_URL=https://videos.yourdomain.com

# Optional: Python version
PYTHON_VERSION=3.11
